<%= render "shared/second-header"%>

<%= form_with model: @user, url: "/users", class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー登録
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:nickname) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:nickname) %>
    <% end %>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例）しゅうと", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:email) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:email) %>
    <% end %>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:password) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:password) %>
    <% end %>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認用)</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:password_confirmation) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:password_confirmation) %>
    <% end %>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class='submit-btn'>
    <%= f.submit "登録" ,class:"submit-color-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>