<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:email) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:email) %>
    <% end %>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <% if f.object.errors.include?(:password) %>
      <%= render 'shared/error_messages', model: f.object.errors.full_messages_for(:password) %>
    <% end %>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='btns'>
    <div class='submit-btn'>
      <%= f.submit "ゲスト" ,class:"submit-color-btn" %>
    </div>
    <div class='submit-btn'>
      <%= f.submit "ログイン" ,class:"submit-color-btn" %>
    </div>
  </div>
  <div class='add-user'>
    <%= link_to 'ユーザー登録はこちらから', new_user_registration_path %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>