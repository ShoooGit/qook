<%= render "shared/header" %>
<div class='main'>
  <div class="recipes-add-contents">
    <div class="recipes-add-main">
      <h2 class="recipes-add-title">レシピ情報の登録</h2>
      <%= form_with model: @recipe, url: '/recipes', method: :post, local: true do |f| %>

        <div class='container'>
          <div class='form'>
            <div class='side-by-side'>
              <!-- レシピ名入力 -->
              <div class='input-form name'>
                <div class="weight-bold-text">
                  レシピ名
                  <span class="indispensable">必須</span>
                </div>
                <%= f.text_area :name, class:"recipes-text", id:"recipe-name", placeholder:"レシピ名を入力してください", maxlength:"20" %>
              </div>
              <!-- レシピ画像選択 -->
              <div class="input-form img">
                <div class="weight-bold-text">
                  料理の写真
                  <span class="indispensable">必須</span>
                </div>
                <%= f.file_field :image, id:"recipe-image", class:"image" %>
              </div>
            </div>
            <!-- カロリーと調理時間を横並びにする -->
            <div class='side-by-side'>
              <!-- レシピ画像選択 -->
              <div class="input-form blank">
              </div>
              <!-- カロリー -->
              <div class='input-form calorie'>
                <div class="weight-bold-text">
                  カロリー
                </div>
                <div class='side-by-side'>
                  <%= f.number_field :name, class:"num-field", id:"recipe-name" %>
                  <div class='unit'>kcal</div>
                </div>
              </div>
              <!-- 調理時間 -->
              <div class='input-form time'>
                <div class="weight-bold-text">
                  調理時間
                </div>
                <div class='side-by-side'>
                  <%= f.number_field :name, class:"num-field", id:"recipe-name" %>
                  <div class='unit'>分</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container foodstuff-container">
          <div class="form vertical">
            <div class='input-form'>
              <div class="weight-bold-text">
                食材
                <span class="indispensable">必須</span>
              </div>
              <%= render "shared/foodstuff", f: f %>
            </div>
            <div class='add-form'>
              <div class='form-btn'><p>食材追加</p></div>
            </div>
          </div>
        </div>
        <div class="login-btn">
          <%= f.submit "登録" ,class:"login-color-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>

<!-- 冷蔵庫ボタン -->
<a href="#">
  <div class='refrigerator-btn'>
    <%= image_tag 'refrigerator.png' , size: '200x60' ,class: "refrigerator-btn-icon" %>
    <span class='refrigerator-btn-text'>冷蔵庫へ</span>
  </div>
</a>
