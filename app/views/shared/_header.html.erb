<header class='top-page-header'>
  <div class='nav'>
    <!-- ヘッダーの左側 -->
    <ul class='lists-left'>
      <li><%= link_to image_tag("logo.png", class:"qook-icon"), "/" %></li>
      <li><%= link_to 'レシピ登録', new_recipe_path, class: "add-recipe" %></li>
      <li><p class="user-nickname"><%= current_user.nickname %></p></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
    </ul>

    <!-- 検索フォーム -->
    <%= form_with(url: search_recipes_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "レシピを探す", class: "input-box" %>
      <%= form.button :type => "submit", class: "search-button" do %>
        <%= image_tag('search.png', class: 'search-icon') %>
      <% end %>
    <% end %>
  </div>
</header>